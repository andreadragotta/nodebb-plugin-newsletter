{
  "name": "nodebb-plugin-newsletter",
  "version": "0.7.2",
  "description": "Send an email newsletter to all users or a group of users.",
  "main": "library.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/yariplus/nodebb-plugin-newsletter"
  },
  "keywords": [
    "nodebb",
    "plugin",
    "email",
    "newsletter"
  ],
  "scripts": {
    "precompile": "echo Compiling ES2015 sources...",
    "compile": "babel src -d .",
    "pretest": "echo Running tests...",
    "test": "npm run compile && npm run test:run && npm run test:report",
    "test:run": "nyc --require babel-register mocha test/newsletter.es6",
    "test:report": "nyc report --reporter=lcov",
    "postbuild": "echo Done.",
    "watch": "watch 'npm -s run build' -d src test"
  },
  "author": {
    "name": "Timothy Fike",
    "email": "tafike@gmail.com"
  },
  "license": "(CC0-1.0 OR MIT)",
  "bugs": {
    "url": "https://github.com/yariplus/nodebb-plugin-newsletter/issues"
  },
  "homepage": "https://github.com/yariplus/nodebb-plugin-newsletter",
  "nbbpm": {
    "compatibility": "^1.6.0"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "nyc": {
    "exclude": [
      "nodebb",
      "test"
    ]
  },
  "devDependencies": {
    "atomus": "^2",
    "babel-cli": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.9.0",
    "chai": "^3.5.0",
    "chai-things": "^0.2.0",
    "mocha": "^2.5.3",
    "mocha-lcov-reporter": "^1.2.0",
    "mock-require": "^1.3.0",
    "nyc": "^6.4.4",
    "rewire": "^2.5.1",
    "sinon": "^1.17.4",
    "standard": "^7.1.1",
    "watch": "^0.18.0"
  }
}
